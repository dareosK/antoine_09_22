<% content_for :meta_title, "#{@writing.title} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, "#{@writing.tagline} by Antoine Champenois" %>
<% content_for :meta_author, "Antoine Champenois" %>
<% content_for :meta_image, cl_image_path(@writing.cover.key) if @writing.cover.attached? %>


<div class="container-main margin-from-navbar">

  <div class="article-top">
    <div class="article-header">

      <div class="header-info">
        <p class="header-date"><%= @writing.date.strftime("%d of %B %Y") %></p>
      </div>

      <div class="header-title">
        <h2><%= @writing.title.upcase %></h2>
        <% if current_user && current_user.admin? %>
          <%= link_to  "ðŸ–‹", edit_writing_path(@writing) %>
        <% end %>
        <p style="color: grey;"><%= @writing.tagline %></p>
      </div>

    </div>

    <% if @writing.cover.attached? %>
      <%= cl_image_tag @writing.cover.key %>
    <% else %>
      <img src="https://source.unsplash.com/random" alt="">
    <% end %>

  </div>

  <div class="container-60">
    <p style="color: grey !important;"><%= @writing.rich_body %></p>
  </div>
  <div class="article-border-bottom"></div>


</div>
