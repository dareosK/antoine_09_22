<div class="container margin-from-navbar dashboard-color">
  <br>
  <h2>üôå Welcome, <strong>pumpkin üë†!</strong></h1>
  <br>
  <div class="">
    <%# nav start %>
      <nav class="nav nav-tabs">
        <a class="nav-link active link-font" aria-current="page" href="#writings" data-bs-toggle="tab">üìë</a>
        <a class="nav-link link-font" href="#newwriting" data-bs-toggle="tab">‚úçüèª</a>
      </nav>
    <%# nav end %>

    <div class="container-60">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="writings" role="tabpanel">
          <ol class="ol-kill-padding">
            <% @writings.each do |writing| %>
              <%= link_to writing_path(writing) do %>
                <div class="card-product">
                  <%= cl_image_tag(writing.cover.key, class: "img-filter") %>
                  <div class="card-product-infos">
                    <h2><%= writing.title %></h2>
                    <p style="color: grey !important;"><%= writing.tagline%></p>
                    <p style="color: grey !important;"><%= writing.date.strftime("%m/%d/%Y")%></p>
                  </div>
                </div>
              <% end  %>
            <% end %>
          </ol>
        </div>

        <div class="tab-pane fade show" id="newwriting" role="tabpanel">
          <%= simple_form_for(@writing) do |f| %>
            <%= f.input :title, label: false, placeholder: "Title" %>
            <%#= f.input :author, label: false, placeholder: "Author" %>
            <%= f.input :body %>
            <%= f.input :tagline, label: false, placeholder: "Tagline" %>
            <%#= f.rich_text_area :rich_body %>
            <%= f.input :date, html5: true, label: false  %>
            <%= f.input :photo, as: :file, label: :photo %>
            <div class="btn w-100 dashboard-button">
              <%= f.submit %>
            </div>
            <br>
            <br>
            <br>
          <% end %>
        </div>

    </div>
  </div>
</div>

